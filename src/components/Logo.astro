---
interface Props {
  size?: 'sm' | 'md' | 'lg' | 'xl';
}

const { size = 'md' } = Astro.props;

const sizeConfig = {
  sm: 'text-lg',
  md: 'text-xl',
  lg: 'text-3xl',
  xl: 'text-4xl md:text-5xl',
};
---

<span class={`logo font-semibold tracking-tight ${sizeConfig[size]}`}>
  <span class="font-bold">AI</span><span class="font-normal text-text-secondary">pedia</span>
</span>

<style>
  .logo {
    font-family: 'Inter', system-ui, sans-serif;
    letter-spacing: -0.02em;
  }
</style>
